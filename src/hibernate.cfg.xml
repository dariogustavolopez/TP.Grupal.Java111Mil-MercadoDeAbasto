<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mercadodeabasto?serverTimezone=UTC&amp;useSSL=false</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="com/mercado/resources/Estado.hbm.xml"/>
    <mapping resource="com/mercado/resources/Precioalquiler.hbm.xml"/>
    <mapping resource="com/mercado/resources/Dimension.hbm.xml"/>
    <mapping resource="com/mercado/resources/Empleado.hbm.xml"/>
    <mapping resource="com/mercado/resources/Lectura.hbm.xml"/>
    <mapping resource="com/mercado/resources/Tipopuesto.hbm.xml"/>
    <mapping resource="com/mercado/resources/Cliente.hbm.xml"/>
    <mapping resource="com/mercado/resources/Sesion.hbm.xml"/>
    <mapping resource="com/mercado/resources/Contrato.hbm.xml"/>
    <mapping resource="com/mercado/resources/Puesto.hbm.xml"/>
    <mapping resource="com/mercado/resources/Sector.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
